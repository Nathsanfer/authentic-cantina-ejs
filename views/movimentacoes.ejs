<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendas - Cantina Escolar</title>
    <link rel="stylesheet" href="/vendas.css">
</head>

<body>
    <nav class="navbar">
        <div class="navbar-content">
            <div class="nav-brand">游꼣 Cantina Escolar</div>
            <div class="nav-links">
                <span class="user-welcome">Ol치, <%= user.nickname %>!</span>
                <a href="/dashboard">Dashboard</a>
                <a href="/cadastro-produto">Produtos</a>
                <a href="/movimentacoes" class="active">Vendas</a>
                <a href="/logout">Sair</a>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <h1 class="page-title">游눯 Registro de Vendas</h1>

        <div class="sales-layout">
            <!-- Formul치rio de Nova Venda -->
            <div class="new-sale-card">
                <h3 class="card-title">Nova Venda</h3>
                <form action="/movimentacoes" method="POST" onsubmit="return validarVenda()">
                    <div class="form-group">
                        <label for="produto_id">Produto</label>
                        <select name="produto_id" id="produto_id" required>
                            <option value="">Selecione um produto</option>
                            <% produtos.forEach(produto => { %>
                                <option value="<%= produto.id_produto %>">
                                    <%= produto.nome %> - R$ <%= parseFloat(produto.preco).toFixed(2) %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="quantidade">Quantidade</label>
                        <input type="number" name="quantidade" id="quantidade" placeholder="Digite a quantidade" min="1" required>
                    </div>
                    
                    <button type="submit">Registrar Venda</button>
                </form>
            </div>

            <!-- Hist칩rico de Vendas -->
            <div class="sales-history">
                <h3 class="history-title">Hist칩rico de Vendas</h3>
                
                <% if (movimentos.length === 0) { %>
                    <div class="no-data">
                        <p class="no-data-text">Nenhuma venda registrada ainda.</p>
                    </div>
                <% } else { %>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Produto</th>
                                <th>Qtd</th>
                                <th>Valor</th>
                                <th>Vendedor</th>
                                <th>Data/Hora</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% movimentos.forEach(mov => { %>
                                <tr>
                                    <td><%= mov.id_venda %></td>
                                    <td><%= mov.nome %></td>
                                    <td><span class="quantity-badge"><%= mov.quantidade %></span></td>
                                    <td><span class="price-badge">R$ <%= parseFloat(mov.preco_total).toFixed(2) %></span></td>
                                    <td><span class="seller-badge"><%= mov.nickname %></span></td>
                                    <td><span class="date-text"><%= new Date(mov.data_venda).toLocaleString('pt-BR') %></span></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        function validarVenda() {
            const produtoId = document.getElementById('produto_id').value;
            const quantidade = document.getElementById('quantidade').value;

            if (!produtoId) {
                alert('Por favor, selecione um produto!');
                return false;
            }

            if (quantidade < 1) {
                alert('A quantidade deve ser maior que zero!');
                return false;
            }

            return confirm(`Confirma a venda de ${quantidade} unidade(s)?`);
        }
    </script>
</body>

</html>